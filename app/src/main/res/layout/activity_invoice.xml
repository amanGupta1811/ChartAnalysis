<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".invoice">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/user_Img1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="0dp"
                android:src="@drawable/logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TAX INVOICE"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/black"
                android:textStyle="bold"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frm"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp"
                >

                <TextView
                    android:id="@+id/frm_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="CHART FIN ACADEMY                                Delhi 110035
                                                             INDIA"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    />

                <TextView
                    android:id="@+id/invo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice: "
                    app:layout_constraintTop_toBottomOf="@id/frm_name"
                    android:layout_marginLeft="25dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/invoT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9886888644"
                    app:layout_constraintTop_toBottomOf="@id/frm_name"
                    app:layout_constraintLeft_toRightOf="@id/invo"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="20dp"
                    android:layout_marginRight="50dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/invo_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice date: "
                    app:layout_constraintTop_toBottomOf="@id/invo"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/invo_dateT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23/01/2023"
                    app:layout_constraintTop_toBottomOf="@id/invoT"
                    app:layout_constraintLeft_toRightOf="@id/invo_date"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="18dp"
                    android:layout_marginRight="25dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order on: "
                    app:layout_constraintTop_toBottomOf="@id/invo_date"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/orderT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="50dp"
                    android:text="23-01-2023"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    app:layout_constraintLeft_toRightOf="@id/order"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/invo_dateT" />

                <TextView
                    android:id="@+id/gst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GSTIN :- 07AABHU4847C1Z6"
                    app:layout_constraintTop_toBottomOf="@id/order"
                    android:layout_marginLeft="25dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cus_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_Img1"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/mr_ms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill to Mr/Ms.."
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <TextView
                    android:id="@+id/cus_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aman Gupta 123"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/mr_ms"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="6dp"
                    />

                <TextView
                    android:id="@+id/mobileNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9357642170"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:inputType="phone"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/cus_name"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="6dp"
                    />



                <TextView
                    android:id="@+id/order_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Id.. "
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintTop_toBottomOf="@id/mobileNo"
                    android:layout_marginTop="6dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <TextView
                    android:id="@+id/order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="030238484"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/mobileNo"
                    app:layout_constraintLeft_toRightOf="@id/order_txt"
                    android:layout_marginTop="6dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pay_det"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cus_d"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/pur_meth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Method"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <TextView
                    android:id="@+id/tran_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction Id"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#000000"
                    app:layout_constraintTop_toBottomOf="@id/pur_meth"
                    android:layout_marginTop="0dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online Payment"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    />

                <TextView
                    android:id="@+id/transiction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxxxxxxxxxxxxxxxxxxxx"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/co"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pay_det"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/cou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <TextView
                    android:id="@+id/pri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#000000"
                    app:layout_constraintTop_toBottomOf="@id/cou"
                    android:layout_marginTop="0dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Technical Analysis"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line1"
                    />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7999"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:textSize="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line1"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/co"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/gst_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GST"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />


                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#000000"
                    app:layout_constraintTop_toBottomOf="@id/gst_n"
                    android:layout_marginTop="0dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/c_gst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CGST"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line2"
                    />

                <TextView
                    android:id="@+id/cgst_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7999"
                    android:textStyle="normal"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line2"
                    />

                <TextView
                    android:id="@+id/s_gst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SGST"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/c_gst"
                    />

                <TextView
                    android:id="@+id/sgst_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7999"
                    android:textStyle="normal"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cgst_price"
                    />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Payment"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintTop_toBottomOf="@id/s_gst"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <TextView
                    android:id="@+id/pri_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7999"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sgst_price"
                    />

                <TextView
                    android:id="@+id/allAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:text="(all amount are rounded off)"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintTop_toBottomOf="@id/total"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:text="(all in INR)"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintTop_toBottomOf="@id/total"
                    app:layout_constraintRight_toRightOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download"
                app:layout_constraintTop_toBottomOf="@id/bill"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/back"
                android:background="@drawable/button_background"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                app:layout_constraintTop_toBottomOf="@id/bill"
                app:layout_constraintLeft_toRightOf="@id/down"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/button_background"
                android:layout_marginTop="20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>